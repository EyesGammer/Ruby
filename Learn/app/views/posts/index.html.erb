<h1>Articles:</h1>
<h1><%= @test %></h1>
<br>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <p>
    <a href="<%= post_path(post.id) %>" class="btn btn-primary">Lire la suite</a>
    <a href="<%= edit_post_path(post.id) %>" class="btn btn-default">Editer</a>
    <a href="<%= post_path(post.id) %>" class="btn btn-danger" data-confirm="Êtes-vous sûr de vouloir supprimer l'article '<%= post.title %>' ?" data-method="DELETE">Supprimer</a>
  </p>
<% end %>
<p>
  <a href="<%= new_post_path %>" class="btn btn-success">Créer un article</a>
</p>
